@model IEnumerable<Loop.Entities.Concrete.Product>

@{
    ViewBag.Title = "Index";
}

<script src="https://kit.fontawesome.com/0e62a71725.js" crossorigin="anonymous"></script>

<div class="se-pre-con"></div>
<div class="theme-layout">
    <div class="container">
        <div class="row merged20">
            <div class="col-lg-12">
                <div class="forum-warper">
                    <div class="central-meta">
                        <div class="title-block">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="align-left">
                                        <h5>All Products</h5>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="row merged20">
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                            <form method="post">
                                                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                                                {
                                                    @Html.TextBox("searchTitle", null, new { placeholder = "Search Product By Name" })
                                                }
                                            </form>
                                        </div>
                                        @* SORTING HERE *@
                                        <div class="col-lg-3 col-md-3 col-sm-3">
                                            @Html.ActionLink("Sort By Title", "Index", "Products", new { sortOrder = ViewBag.TitleSortParam }, new { @class = "btn btn-outline-secondary btn-sm" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- title block -->
                    <h4>Find Any Product You Need</h4>
                    <a id="basket-button" class="addnewforum" href="/OrderProducts/Cart"><i class="fas fa-shopping-cart"></i>  Shopping Basket</a>
                    <a class="addnewforum" href="~/Products/Create" title=""><i class="fa fa-plus mx-2"></i> Create Product</a>
                </div>
            </div>
        </div>
    </div>
    <section>
        <div class="gap2 gray-bg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row merged20" id="page-contents">
                            @foreach (var product in Model)
                            {
                                <div class="col-lg-4">
                                    <div class="load-more">

                                        <div class="central-meta item">
                                            <div class="classic-post">
                                                <figure>
                                                    <img class="prod-image" src="@product.PhotoUrl" alt="Photo Missing">
                                                </figure>
                                                <div class="classic-pst-meta">
                                                    <div class="more">
                                                        <div class="more-post-optns">
                                                            <i class="ti-more-alt"></i>
                                                            <ul>
                                                                <li><i class="fa fa-pencil-square-o"></i>@Html.ActionLink("Edit", "Edit", new { id = product.ProductId }, new { onclick = "return confirm('Are you sure you wish to edit this product?');" })</li>
                                                                <li>
                                                                    <i class="fa fa-trash-o"></i>@Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, new { onclick = "return confirm('Are you sure you wish to delete this product?');" })
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <h4><i class="fa fa-check-circle" title="verified"></i>Title: @product.Title</h4>
                                                    <div><p>Description: @product.Description</p></div>
                                                    @{

                                                        var str = product.GetType().Name.Split('_');

                                                    }
                                                    <span>Product Type : @str[0]</span>
                                                    <div class="location-area">
                                                        <div>
                                                            @*"https://localhost:44391/api/cart/getfive"*@
                                                            <form id="form2" action="/OrderProducts/Add" method="get">
                                                                <div>
                                                                    <input type="text" id="quanity" name="quantity" />
                                                                    <input type="text" id="price" name="price" />
                                                                    @Html.Hidden("productId", product.ProductId)
                                                                    <button type="submit" id="btn" class="btn btn-outline-secondary btn-sm">Add to Cart</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div><!-- centerl meta -->
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

<script src="~/Scripts/jquery-3.5.0.js"></script>
<script src="js/main.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA8c55_YHLvDHGACkQscgbGLtLRdxBDCfI"></script>
<script src="js/locationpicker.jquery.js"></script>
<script src="js/map-init.js"></script>
<script src="js/script.js"></script>

